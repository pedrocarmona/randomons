<?xml version="1.0" encoding="utf-8"?>

<org.holoeverywhere.widget.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:paddingTop="10dip"
            android:paddingBottom="10dip" >

        <ImageView
                android:id="@+id/randomon_dex_img"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:padding="5dip"
                android:layout_gravity="center"
                android:src="@drawable/randomom"
                android:background="@drawable/image_view_border"
                android:contentDescription="">
        </ImageView>

        <ImageView
                android:id="@+id/randomon_location"
                android:layout_width="140dip"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/image_view_border"
                android:src="@drawable/world_map_small"
                android:contentDescription="">
        </ImageView>
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="30dip"
        android:paddingBottom="2dip" >

        <org.holoeverywhere.widget.TextView
                android:id="@+id/randomon_dex_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dip"
                android:text="Estranhomon"
                android:textStyle="bold"
                android:textColor="@color/light_blue"/>

        <org.holoeverywhere.widget.TextView
                android:id="@+id/randomon_dex_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dip"
                android:text="Tipo: Terrestre"
                android:textStyle="bold"
                android:textColor="@color/light_blue"/>

    </org.holoeverywhere.widget.LinearLayout>

    <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient_line"
            android:layout_height="4dp"/>

    <org.holoeverywhere.widget.LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:padding="2dip" >

        <org.holoeverywhere.widget.TextView
                android:id="@+id/txt_dex_evolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dip"
                android:text="@string/evolution"
                android:textStyle="normal"
                android:textColor="@color/light_blue"/>
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:paddingBottom="10dip" >

        <org.holoeverywhere.widget.LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white" >
            <ImageView
                    android:id="@+id/randomon_stage1"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:padding="5dip"
                    android:background="@drawable/image_view_border"
                    android:src="@drawable/quest_mark"
                    android:contentDescription="">
            </ImageView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_dex_evl1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dip"
                    android:text="TBD"
                    android:textStyle="normal"
                    android:textColor="@color/light_blue"/>
        </org.holoeverywhere.widget.LinearLayout>

        <org.holoeverywhere.widget.LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white" >
            <ImageView
                    android:id="@+id/randomon_stage2"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:scaleType="fitXY"
                    android:padding="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/image_view_border"
                    android:src="@drawable/quest_mark"
                    android:contentDescription="">
            </ImageView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_dex_evl2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dip"
                    android:text="TBD"
                    android:textStyle="normal"
                    android:textColor="@color/light_blue"/>
        </org.holoeverywhere.widget.LinearLayout>

        <org.holoeverywhere.widget.LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white" >
            <ImageView
                    android:id="@+id/randomon_stage3"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:padding="5dip"
                    android:background="@drawable/image_view_border"
                    android:src="@drawable/quest_mark"
                    android:contentDescription="">
            </ImageView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_dex_evl3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dip"
                    android:text="TBD"
                    android:textStyle="normal"
                    android:textColor="@color/light_blue"/>
        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>

    <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient_line"
            android:layout_height="4dp"/>
    <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="10dip"/>

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#b1cbe1" >

        <org.holoeverywhere.widget.TextView
                android:id="@+id/txt_rndmn_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="3dip"
                android:textSize="12dip"
                android:text="@string/randomon_details"
                android:textStyle="bold"
                android:textColor="#000"/>

        <View
                android:layout_width="match_parent"
                android:background="#6e717a"
                android:layout_height="1dip"/>

        <org.holoeverywhere.widget.LinearLayout
                android:id="@+id/choose_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

            <org.holoeverywhere.widget.LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                <org.holoeverywhere.widget.TextView
                        android:id="@+id/randomon_dex_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dip"
                        android:padding="2dip"
                        android:textStyle="normal"
                        android:textColor="#000"/>
            </org.holoeverywhere.widget.LinearLayout>
        </org.holoeverywhere.widget.LinearLayout>
    </org.holoeverywhere.widget.LinearLayout>
</org.holoeverywhere.widget.LinearLayout>

