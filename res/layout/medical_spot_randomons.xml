<?xml version="1.0" encoding="utf-8"?>

<org.holoeverywhere.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.holoeverywhere.widget.ListView
            android:id="@+id/randomons_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fastScrollEnabled="true" android:alpha="0">
    </org.holoeverywhere.widget.ListView>

    <org.holoeverywhere.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="#2d2d2d" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/heal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heal_randomons">
        </org.holoeverywhere.widget.Button>

    </org.holoeverywhere.widget.LinearLayout>

</org.holoeverywhere.widget.LinearLayout>