<?xml version="1.0" encoding="utf-8"?>

<org.holoeverywhere.widget.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:gravity="center_horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:paddingTop="10dip"
            android:paddingBottom="5dip">

        <ImageView
                android:id="@+id/avatar_img"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:scaleType="fitXY"
                android:background="@drawable/full_rounded_list"
                android:padding="5dp"
                android:src="@drawable/avatar_img"
                android:contentDescription="">
        </ImageView>

        <org.holoeverywhere.widget.LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: John Ramboias"
                    android:textColor="#0066cc">
            </org.holoeverywhere.widget.TextView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/user_nat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country: Hawai"
                    android:textColor="#0066cc">
            </org.holoeverywhere.widget.TextView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/user_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank: -500"
                    android:textColor="#0066cc">
            </org.holoeverywhere.widget.TextView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/user_victories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battles Won: -50"
                    android:textColor="#0066cc">
            </org.holoeverywhere.widget.TextView>
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/user_randomons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Randomons: Nem um"
                    android:textColor="#0066cc">
            </org.holoeverywhere.widget.TextView>

        </org.holoeverywhere.widget.LinearLayout>

    </org.holoeverywhere.widget.LinearLayout>
    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">

        <org.holoeverywhere.widget.Button
                android:text="Battle"
                android:id="@+id/but_battle"
                android:textColor="#469FED"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/pdtls_buttons">
        </org.holoeverywhere.widget.Button>

        <org.holoeverywhere.widget.Button
                android:text="Trade"
                android:textColor="#469FED"
                android:id="@+id/but_trade"
                android:layout_toRightOf="@+id/Button01"
                android:layout_marginLeft="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/pdtls_buttons">
        </org.holoeverywhere.widget.Button>

    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B1CBE1"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="5dip">

        <org.holoeverywhere.widget.TextView
                android:id="@+id/txt_rand_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:text="Randomons List"
                android:textStyle="bold"
                android:textColor="#0066cc"/>

        <View
                android:layout_width="match_parent"
                android:background="@color/abs__background_holo_dark"
                android:layout_height="1dp"/>

        <org.holoeverywhere.widget.ListView
                android:id="@+id/pl_randomons_listview"
                android:layout_marginTop="3dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </org.holoeverywhere.widget.LinearLayout>

</org.holoeverywhere.widget.LinearLayout>