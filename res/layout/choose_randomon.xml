<?xml version="1.0" encoding="utf-8"?>

<org.holoeverywhere.widget.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:paddingTop="15dip"
            android:paddingBottom="15dip" >

            <ImageView
                    android:id="@+id/avatar_img"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:padding="5dip"
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    android:background="@drawable/image_view_border"
                    android:contentDescription="">
            </ImageView>


        <ImageView
                android:id="@+id/lever"
                android:layout_width="140dip"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/image_view_border"
                android:src="@drawable/lever_up"
                android:contentDescription="">
        </ImageView>


    </org.holoeverywhere.widget.LinearLayout>

    <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient_line"
            android:layout_height="4dp"/>

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:paddingTop="10dip"
            android:paddingBottom="10dip" >


        <ImageView
                android:id="@+id/randomon1"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:padding="5dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/image_view_border"
                android:src="@drawable/quest_mark"
                android:contentDescription="">
        </ImageView>

        <ImageView
                android:id="@+id/randomon2"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:padding="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/image_view_border"
                android:src="@drawable/quest_mark"
                android:contentDescription="">
        </ImageView>

        <ImageView
                android:id="@+id/randomon3"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:padding="5dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/image_view_border"
                android:src="@drawable/quest_mark"
                android:contentDescription="">
        </ImageView>


    </org.holoeverywhere.widget.LinearLayout>


    <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient_line"
            android:layout_height="4dp"/>

    <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="10dip"/>

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#b1cbe1" >



        <org.holoeverywhere.widget.TextView
                android:id="@+id/txt_last_evt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="3dip"
                android:textSize="12dip"
                android:text="Select your starter Randomon"
                android:textStyle="normal"
                android:textColor="#000"/>



        <View
                android:layout_width="match_parent"
                android:background="#6e717a"
                android:layout_height="1dip"/>





        <org.holoeverywhere.widget.LinearLayout
                android:id="@+id/choose_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

            <org.holoeverywhere.widget.LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >


                <org.holoeverywhere.widget.TextView
                        android:id="@+id/choose_info_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dip"
                        android:layout_gravity="center"
                        android:textSize="15dip"
                        android:text="Pull the lever to begin"
                        android:textStyle="normal"
                        android:textColor="#000"/>

            </org.holoeverywhere.widget.LinearLayout>


        </org.holoeverywhere.widget.LinearLayout>


    </org.holoeverywhere.widget.LinearLayout>



</org.holoeverywhere.widget.LinearLayout>

