<?xml version="1.0" encoding="utf-8"?>

<org.holoeverywhere.widget.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:background="#fff">

    <org.holoeverywhere.widget.LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dip"
            >

        <org.holoeverywhere.widget.LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#0066CC"
                    />

            <ImageView
                    android:id="@+id/randomon_info_img"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/randomom"
                    android:contentDescription="randomon_photo_info"
                    android:background="@drawable/full_rounded_list"
                    android:padding="5dp" />

            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_info_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type: "
                    android:layout_gravity="center"
                    android:textColor="#0066CC"
                    />
            <org.holoeverywhere.widget.TextView
                    android:id="@+id/randomon_info_lvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level "
                    android:layout_gravity="center"
                    android:textColor="#0066CC"
                    />


        </org.holoeverywhere.widget.LinearLayout>

        <org.holoeverywhere.widget.LinearLayout
                android:id="@+id/layout_pentagono"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                >


            <ImageView
                    android:id="@+id/pentagono"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"

                    android:src="@drawable/pentagon"
                    android:padding="5dp"

                    android:contentDescription="randomon_image_pentagono"/>

        </org.holoeverywhere.widget.LinearLayout>

    </org.holoeverywhere.widget.LinearLayout>


    <org.holoeverywhere.widget.LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B1CBE1"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="5dip"
            android:layout_marginTop="10dip">

        <org.holoeverywhere.widget.TextView
                android:id="@+id/txt_last_evt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:text="Randomon Moves"
                android:textStyle="bold"
                android:textColor="#0066cc"/>

        <View
                android:layout_width="match_parent"
                android:background="@color/abs__background_holo_dark"
                android:layout_height="1dp"/>

        <org.holoeverywhere.widget.ListView
                android:id="@+id/randomino_details"
                android:layout_marginTop="3dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </org.holoeverywhere.widget.LinearLayout>

</org.holoeverywhere.widget.LinearLayout>